<section class="hero is-white">
  <div class="hero-body">
    <div class="container">
      <div class="column is-centered">
        <div class="column is-6-table is-6-desktop is-6-widescreen">
          <div class="field">
            <label class="title ">Forgot your password?</label>
          </div>
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field">
            <p class="control has-icons-left">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", Placeholder: "Email", class: "input" %>

              <span class="icon is-small is-left">
                <i class="fas fa-envelope"></i>
              </span>
              </p>
          </div>

          <div class="field is-grouped">
            <div class="control">
              <%= f.submit "Send me reset password instructions", class: "button is-warning" %>
            </div>
          </div>
          <% end %>
          <hr class="navbar-divider">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</section>







