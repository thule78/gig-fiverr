<% content_for :head do %>
  <meta name="turbolinks-cache-control" content="no-cache">
<% end %>

<section class="has-bg-img hero is-medium ">
  <div class="hero-body">
    <div class="container">
      <h1 class="title has-text-danger">
        Find the Perfect Freelance Services <br />
        For Your Business
      </h1>
      <%= form_tag search_path, method: :get, class: "field has-addons" do%>
        <div class="control has-icons-left">
          <span class="icon is-small is-left">
            <i class="fa fa-search"></i>
          </span>
          <%= text_field_tag 'q', '', class: "input", placeholder: "Try 'logo design' " %>
        </div>
        <div class="control">
          <button class="button is-warning" type="submit">Search

          </button>
        </div>
      <%end%>
    </div>
  </div>
</section>

