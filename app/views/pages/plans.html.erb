<section class="section">
  <div class="container">
    <p class="title is-4 m-t 50 m-b has-text-centered">
      Choose the best membership package.
    </p>
    <div class="pricing-table m-t-20 m-l-50 m-r-50">
      <% @plans.data.each do |p|%>
      <div class="pricing-plan
        <%= 'is-primary' if p.amount == 1000%>
        <%= 'is-success' if p.amount == 700%>
        <%= 'is-warning' if p.amount == 500%>">
        <div class="plan-header"><%= p.nickname %></div>
        <div class="plan-price">
          <span class="plan-price-amount">
            <span class="plan-price currency">$</span><%= p.amount / 100 %>
          </span>/month
        </div>
        <div class="plan-items">
          <div class="plan-item">
            Commission fee is <%= p.metadata.commission %>%
          </div>
        </div>
        <div class="plan-footer">
          <%= form_with url: subscribe_url do |f| %>
           <%= f.hidden_field :p_id, value: p.id%>
            <%= f.submit "Choose", class: "button is-fullwidth"%>
          <% end %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</section>
