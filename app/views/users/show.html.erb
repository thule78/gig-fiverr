<section class="section">
    <div class="container">
        <div class="columns">

            <!-- LEFT SIDE -->
            <div class="column is-one-third">
                <div class="columns is-multiline">

                    <!-- Top Card -->
                    <div class="column is-full">
                        <div class="card">

                            <!-- Avatar -->
                            <div class="card-content is-horizontal-center is-flex">
                              <figure class="image is-128x128">
                                <%= image_tag avatar_url(@user), class: "is-rounded"%>
                              </figure>
                            </div>

                            <div class="card-content">

                                <!-- Upload Button -->
                                <div class="content has-text-centered">
                                  <strong><%= @user.full_name %></strong>
                                </div>
                                <hr class="h-10">

                                <!-- Member -->
                                <article class="media">
                                  <div class="media-content">Member Since</div>
                                  <div class="media-right">
                                    <strong><%= @user.created_at.strftime('%b %y')%></strong>
                                  </div>
                                </article>
                                <hr class="h-10">

                                <!-- From -->
                                <article>
                                  <div class="media">
                                    <div class="media-content">
                                      <p>
                                        <strong>Form</strong><br >
                                        <%= @user.from %>
                                      </p>
                                    </div>
                                  </div>
                                </article>
                                <hr class="h-10">

                                <!-- Online Status -->
                                <article>
                                  <div class="media">
                                    <div class="media-content">Status</div>
                                    <div class="media-right">
                                      <strong><% if @user.status %>Online <% else %> Offline <% end %></strong><i class="toggle far fa-edit" aria-controls="user_status"></i>
                                    </div>
                                  </div>
                                </article>

                            </div>
                        </div>
                    </div>

                    <!-- Bottom Card -->
                    <div class="column is-full">
                        <div class="card">
                            <div class="card-content">

                                <!-- About -->
                                <article>
                                  <div class="media">
                                    <div class="media-content">
                                      <p>
                                        <strong>About Yourself</strong><br >
                                        <%= @user.about %>
                                      </p>
                                    </div>
                                  </div>
                                </article>
                                <hr class="h-10">

                                <!-- Languages -->
                                <article>
                                  <div class="media">
                                    <div class="media-content">
                                      <p>
                                        <strong>Language</strong><br >
                                        <%= @user.language%>
                                      </p>
                                    </div>
                                  </div>
                                </article>
                                <hr class="h-10">

                                <!-- Linked Account -->
                                <article class="media">
                                  <div class="content">
                                    <p>
                                      <strong>Linked Account</strong><br />
                                      <%if @user.uid %>
                                        <span class="has-text-success">Facebook verified</span>
                                      <%else%>
                                        <span class="has-text-danger">Facebook unverified</span>
                                      <%end%>
                                    </p>
                                  </div>

                                </article>
                                <!-- Mobile Number -->
                                <article class="media">
                                  <div class="content">
                                    <p>
                                      <strong>Mobile Number</strong><br />
                                      <%if @user.phone %>
                                        <span class="has-text-success">Mobile verified</span>
                                      <%else%>
                                        <span class="has-text-danger">Mobile unverified</span>
                                      <%end%>
                                    </p>
                                  </div>

                                </article>


                            </div>
                        </div>
                    </div>

                </div>
            </div>

            <!-- RIGHT SIDE -->
            <div class="column">
                <div class="card">
                  <div class="card-header">
                    <div class="card-header-title">
                      Lastest Reviews
                    </div>
                  </div>
                  <div class="card-content">
                    <!--sample reviews-->
                    <article calss="media">
                      <figure class="media-left">
                        <p class="image is-64x64">
                        <%= image_tag avatar_url(@user), class: "is-rounded "%>
                        </p>
                      </figure>
                      <div class="media-content">
                        <div class="content">
                          <p>
                            <strong>Alex</strong><br />
                            Lorem ipsum dolor sit amet, consectetur adipisicing elit. A eius aliquid soluta eligendi dolor hic aliquam quae nisi nemo suscipit, quaerat culpa similique dolores expedita aspernatur, nam repellendus sequi perferendis.
                          </p>
                          <small>20m</small>
                        </div>
                      </div>
                      <div class="media-right">
                        <span class="star-review"><i class="fas fa-star"></i></span>
                      </div>
                    </article>
                  </div>
                </div>
            </div>

        </div>
    </div>
</section>
















